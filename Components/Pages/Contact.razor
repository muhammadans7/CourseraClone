@page "/contact"  
@attribute [StreamRendering]
@rendermode InteractiveServer
<h2>Contact Us</h2>
<p>If you have any questions, feel free to reach out to us.</p>

<EditForm Model="@contactModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="Name">Name</label>
        <InputText id="Name" @bind="contactModel.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <InputText id="Email" @bind="contactModel.Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label for="Message">Message</label>
        <InputTextArea id="Message" @bind="contactModel.Message" class="form-control" required></InputTextArea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</EditForm>

@if (!string.IsNullOrEmpty(responseMessage))
{
    <div class="mt-3 alert alert-@alertClass">@responseMessage</div>
}

@code {
    private ContactModel contactModel = new ContactModel();
    private string responseMessage;
    private string alertClass;

    private void HandleValidSubmit()
    {
        // Simulate sending the contact message
        responseMessage = "Your message has been sent successfully!";
        alertClass = "success";

        // Resetting the form
        contactModel = new ContactModel();
    }

    public class ContactModel
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public string Message { get; set; }
    }
}
